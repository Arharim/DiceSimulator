<Window x:Class="DiceSimulatorWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:vm="clr-namespace:DiceSimulatorWPF.ViewModels"
        xmlns:util="clr-namespace:DiceSimulatorWPF.Utility"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Симулятор Дайсов" 
        Height="655" 
        Width="1100" 
        MinHeight="655"
        MinWidth="1100">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <util:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <util:BoolToTextConverter x:Key="BoolToTextConverter"/>
        <util:RichTextContentToFlowDocumentConverter x:Key="RichTextConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Input Section -->
        <GroupBox Header="Параметры ввода" Grid.Row="0" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="5">
                    <TextBlock Text="Введите дайсы (например: 1d6 2d8 1d4):" FontWeight="Bold"/>
                    <TextBox Text="{Binding DiceInput, UpdateSourceTrigger=PropertyChanged}" Width="150" Margin="0,5,0,0"/>
                    <TextBlock Text="Количество бросков:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBox Text="{Binding RollsInput, UpdateSourceTrigger=PropertyChanged}" Width="150" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                    <Button Content="{Binding IsProcessing, Converter={StaticResource BoolToTextConverter}}" 
                            Command="{Binding RollDiceCommand}" 
                            Width="120" Height="40" FontWeight="Bold" Background="LightBlue" Margin="5"/>
                    <ToggleButton Content="Переключить вид" 
                              IsChecked="{Binding IsChartView, Mode=TwoWay}" 
                              Width="120" Height="40" FontWeight="Bold" Background="LightBlue" Margin="5"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Results Section -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Результаты симуляции" Grid.Column="0" Margin="5">
                 <Grid>
                    <ScrollViewer x:Name="ResultsSimulationTextView" VerticalScrollBarVisibility="Auto" 
                                  Visibility="{Binding IsChartView, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                        <!-- <TextBlock Text="{Binding SimulationText}" TextWrapping="Wrap"/> -->
                        <RichTextBox x:Name="ResultsSimulationRichText"
                                     IsReadOnly="True"
                                     FontFamily="Consolas"
                                     BorderThickness="0"
                                     >
                            <i:Interaction.Behaviors>
                                <util:RichTextBoxBindingBehavior DocumentContent="{Binding SimulationContent, Converter={StaticResource RichTextConverter}}"/>
                            </i:Interaction.Behaviors>
                        </RichTextBox>
                    </ScrollViewer>
                    <!-- Simulation Chart -->
                    <lvc:CartesianChart x:Name="SimulationChart" Margin="5" 
                                       Visibility="{Binding IsChartView, Converter={StaticResource BoolToVisibilityConverter}}"
                                       LegendLocation="Top">
                        <lvc:CartesianChart.Series>
                            <lvc:ColumnSeries Title="Частота выпадения" Values="{Binding SimulationValues}" 
                                             Fill="#FF4CAF50" Stroke="#FF388E3C" StrokeThickness="2"/>
                        </lvc:CartesianChart.Series>
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="Сумма бросков" Labels="{Binding SimulationLabels}"/>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Количество" MinValue="0"/>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </Grid>
            </GroupBox>
 
            <GroupBox Header="Теоретические расчеты" Grid.Column="1" Margin="5">
                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                  Visibility="{Binding IsChartView, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                        <!--   <TextBlock Text="{Binding TheoryText}" TextWrapping="Wrap"/>-->
                        <RichTextBox x:Name="ResultsTheoryRichText" 
                                     IsReadOnly="True" 
                                     FontFamily="Consolas" 
                                     BorderThickness="0" 
                                     >
                            <i:Interaction.Behaviors>
                                <util:RichTextBoxBindingBehavior DocumentContent="{Binding TheoryContent, Converter={StaticResource RichTextConverter}}"/>
                            </i:Interaction.Behaviors>
                        </RichTextBox>
                    </ScrollViewer>
                    <!-- Theory Chart -->
                    <lvc:CartesianChart x:Name="TheoryChart" Margin="5" 
                                       Visibility="{Binding IsChartView, Converter={StaticResource BoolToVisibilityConverter}}"
                                       LegendLocation="Top">
                        <lvc:CartesianChart.Series>
                            <lvc:ColumnSeries Title="Теоретическая вероятность" Values="{Binding TheoryValues}" 
                                             Fill="#FF2196F3" Stroke="#FF1976D2" StrokeThickness="2"/>
                        </lvc:CartesianChart.Series>
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="Сумма бросков" Labels="{Binding TheoryLabels}"/>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Вероятность" MinValue="0"/>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
